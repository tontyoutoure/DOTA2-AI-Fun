<root> 
	
	<styles>
		<include src="file://{resources}/styles/custom_game/custom_loading_screen.css" />
		<include src="file://{resources}/styles/custom_game/hero_selection.css" />
	<include src="file://{resources}/styles/dotastyles.css" />
	</styles>
	<scripts>
	<include src="file://{resources}/scripts/custom_game/game_mode.js"/>
	<include src="file://{resources}/scripts/custom_game/hero_selection.js"/>
	</scripts>
	<Panel class="AddonLoadingRoot">
		<Panel id="CustomBg" >
			<Panel id="game_options_container" >
				<Panel id = "GameOptionsPanel">
					<Label id="GameOptionsPanelTitle" text="#addon_option_title" />
					<Panel id="GameOptionSubpanelContainerOuter">
						<Panel id="GameOptionSubpanelContainerInner">
							<Panel id="RadiantGoldMultiplierPanel"	class="GameOptionsSubPanel">
								<Label id="RadiantGoldMultiplierTitle" class="GameOptionsLabel" text="#radiant_gold_multiplier" />
								<DropDown id="radiant_gold_multiplier_dropdown" class="GameOptionsDropdown">
									<Label text="1" id="1" />
									<Label text="1.5" id="1.5"/>
