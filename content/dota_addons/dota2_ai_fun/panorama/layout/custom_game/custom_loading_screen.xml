									<Label text="3" id="3"/>
									<Label text="3.5" id="3.5"/>
									<Label text="4" id="4"/>
									<Label text="4.5" id="4.5"/>
									<Label text="5" id="5"/>
								</DropDown>				
							</Panel>
							<Panel id="DireGoldMultiplierPanel"	class="GameOptionsSubPanel">
								<Label id="DireGoldMultiplierTitle" class="GameOptionsLabel" text="#dire_gold_multiplier" />
								<DropDown id="dire_gold_multiplier_dropdown" class="GameOptionsDropdown">
									<Label text="1" id="1" />
									<Label text="1.5" id="1.5"/>
									<Label text="2" id="2"/>
									<Label text="2.5" id="2.5"	/>
									<Label text="3" id="3"/>
									<Label text="3.5" id="3.5"/>
									<Label text="4" id="4"/>
									<Label text="4.5" id="4.5"/>
									<Label text="5" id="5"/>
								</DropDown>				
							</Panel>
							<Panel id="RadiantXPMultiplierPanel"	class="GameOptionsSubPanel">
								<Label id="RadiantXPMultiplierTitle" class="GameOptionsLabel" text="#radiant_xp_multiplier" />
								<DropDown id="radiant_xp_multiplier_dropdown" class="GameOptionsDropdown">
									<Label text="1" id="1" />
									<Label text="1.5" id="1.5"/>
									<Label text="2" id="2"/>
									<Label text="2.5" id="2.5"	/>
									<Label text="3" id="3"/>
									<Label text="3.5" id="3.5"/>
									<Label text="4" id="4"/>
									<Label text="4.5" id="4.5"/>
									<Label text="5" id="5"/>
								</DropDown>				
							</Panel>
							<Panel id="DireXPMultiplierPanel"	class="GameOptionsSubPanel">
								<Label id="DireXPMultiplierTitle" class="GameOptionsLabel" text="#dire_xp_multiplier" />
								<DropDown id="dire_xp_multiplier_dropdown" class="GameOptionsDropdown">
									<Label text="1" id="1" />
									<Label text="1.5" id="1.5"/>
									<Label text="2" id="2"/>
									<Label text="2.5" id="2.5"	/>
									<Label text="3" id="3"/>
									<Label text="3.5" id="3.5"/>
									<Label text="4" id="4"/>
									<Label text="4.5" id="4.5"/>
									<Label text="5" id="5"/>
								</DropDown>				
							</Panel>
							<Panel id="RadiantPlayerNumberMultiplierPanel"	class="GameOptionsSubPanel">
								<Label id="RadiantPlayerNumberMultiplierTitle" class="GameOptionsLabel" text="#radiant_player_number" />
								<DropDown id="radiant_player_number_dropdown" class="GameOptionsDropdown">
									<Label text="10" id="10" />
									<Label text="9" id="9"/>
									<Label text="8" id="8"/>
									<Label text="7" id="7"	/>
									<Label text="6" id="6"/>
									<Label text="5" id="5"/>
									<Label text="4" id="4"/>
									<Label text="3" id="3"/>
									<Label text="2" id="2"/>
									<Label text="1" id="1"/>
								</DropDown>				
							</Panel>
							<Panel id="DirePlayerNumberMultiplierPanel"	class="GameOptionsSubPanel">
								<Label id="DirePlayerNumberMultiplierTitle" class="GameOptionsLabel" text="#dire_player_number" />
								<DropDown id="dire_player_number_dropdown" class="GameOptionsDropdown">
									<Label text="10" id="10" />
									<Label text="9" id="9"/>
									<Label text="8" id="8"/>
									<Label text="7" id="7"/>
									<Label text="6" id="6"/>
									<Label text="5" id="5"/>
									<Label text="4" id="4"/>
									<Label text="3" id="3"/>
									<Label text="2" id="2"/>
									<Label text="1" id="1"/>
								</DropDown>				
							</Panel>
							<Panel id="RespawnTimePercentagePanel"	class="GameOptionsSubPanel">
								<Label id="RespawnTimePercentagePanelTitle" class="GameOptionsLabel" text="#respawn_time_percentage" />
								<DropDown id="respawn_time_percentage_dropdown" class="GameOptionsDropdown">
									<Label text="100%" id="100" />
									<Label text="70%" id="70"/>
									<Label text="40%" id="40"/>
									<Label text="10%" id="10"/>
									<Label text="7%" id="7"/>
									<Label text="4%" id="4"/>
									<Label text="1%" id="1"/>
									<Label text="0%" id="0"/>
								</DropDown>				
							</Panel>
							<Panel id="MaxLevelPanel"	class="GameOptionsSubPanel">
								<Label id="MaxLevelTitle" class="GameOptionsLabel" text="#max_level" />
								<DropDown id="max_level_dropdown" class="GameOptionsDropdown">
									<Label text="25" id="25" />
									<Label text="50" id="50"/>
									<Label text="100" id="100"/>
									<Label text="200" id="200"/>
									<Label text="400" id="400"/>
									<Label text="800" id="800"/>
									<Label text="1600" id="1600"/>
								</DropDown>				
							</Panel>	
							<Panel id="TowerPowerPanel"	class="GameOptionsSubPanel">
								<Label id="TowerPowerTitle" class="GameOptionsLabel" text="#tower_power" />
								<DropDown id="tower_power_dropdown" class="GameOptionsDropdown">
									<Label text="1" id="1" />
									<Label text="2" id="2"/>
									<Label text="3" id="3"/>
									<Label text="4" id="4"/>
									<Label text="5" id="5"/>
									<Label text="6" id="6"/>
									<Label text="7" id="7"/>
									<Label text="8" id="8"/>
									<Label text="9" id="9"/>
									<Label text="10" id="10"/>
								</DropDown>				
							</Panel>		
							<Panel id="TowerEndurePanel"	class="GameOptionsSubPanel">
								<Label id="TowerEndureTitle" class="GameOptionsLabel" text="#tower_endure" />
								<DropDown id="tower_endure_dropdown" class="GameOptionsDropdown">
									<Label text="1" id="1" />
									<Label text="2" id="2"/>
									<Label text="3" id="3"/>
									<Label text="4" id="4"/>
									<Label text="5" id="5"/>
									<Label text="6" id="6"/>
									<Label text="7" id="7"/>
									<Label text="8" id="8"/>
									<Label text="9" id="9"/>
									<Label text="10" id="10"/>
								</DropDown>				
							</Panel>			
							<Panel id="ImbalancedEconomizerPanel"	class="GameOptionsSubPanel">
								<Label id="ImbalancedEconomizerTitle" class="GameOptionsLabel" text="#imbalanced_economizer" />
								<ToggleButton checked="true" class="GameOptionsToggle" id="imbalanced_economizer"/>		
							</Panel>
							<Panel id="BotAttackTowerPickRunePanel"	class="GameOptionsSubPanel">
								<Label id="BotAttackTowerPickRuneTitle" class="GameOptionsLabel" text="#bot_attack_tower_pick_rune" />
								<ToggleButton checked="true" class="GameOptionsToggle" id="bot_attack_tower_pick_rune"/>		
							</Panel>
							<Panel id="BotHaveFunItemPanel"	class="GameOptionsSubPanel">
								<Label id="BotHaveFunItemTitle" class="GameOptionsLabel" text="#bot_has_fun_item" />
								<ToggleButton checked="true" class="GameOptionsToggle" id="bot_has_fun_item"/>		
							</Panel>
							<Panel id="UniversalShopPanel"	class="GameOptionsSubPanel">
								<Label id="UniversalShopTitle" class="GameOptionsLabel" text="#universal_shop" />
								<ToggleButton checked="true" class="GameOptionsToggle" id="universal_shop"/>		
							</Panel>
						</Panel>
						<Button id="GameOptionHider" />
					</Panel>
					<Button id="LockOptionsBtn" class="GameOptionButton" onactivate="LockGameOptions();">
						<Label id="LockOptionsBtnLabel" text="#lock_game_options" />
					</Button>
					<Button id="UnlockOptionsBtn" class="GameOptionButton" onactivate="UnlockGameOptions();">
						<Label id="UnlockOptionsBtnLabel" text="#unlock_game_options" />
					</Button>
				</Panel>
			</Panel>
			<Panel id="HeroSelectionOptionContainer">
				<Label id="HeroSelectionOptionContainerTitle" text="#hero_selection_mode_title" />
				<Label id="HeroSelectionOptionContainerWait" text="#wait_for_host" />
				<Panel id="HeroSelectionOptionPanel">		
					<Panel id="AllowSelectionDupulicatePanel"	class="GameOptionsSubPanel">
						<Label id="AllowSelectionDupulicateTitle" class="HeroSelectionOptionLabel" text="#allow_selection_replicate" />
						<ToggleButton checked="true" class="HeroSelectionOptionToggle" id="allow_selection_replicate"/>		
					</Panel>
					<Panel id="BanImbaFunHeroesPanel" class="GameOptionsSubPanel">
						<Label id="BanImbaFunHeroesTitle" class="HeroSelectionOptionLabel" text="#ban_imba_fun_heroes" />
						<ToggleButton checked="true" class="HeroSelectionOptionToggle" id="ban_imba_fun_heroes"/>		
					</Panel>
					<Button id="ConfirmHeroSelectionOptionsBtn" class="MiddleLargeButton" onactivate="ConfirmHeroSelectionOptionsActivate();">
						<Label id="ConfirmHeroSelectionOptionsLabel" text="#hero_selection_option_confim" />
					</Button>
				</Panel>
			</Panel>
			<Panel id="HeroSelectionContainer">
				<Label id="HeroSelectionTitle" text="#hero_selection_title"/>
				<Panel id="HeroTypeSelectionBtnContainer">			
				<Button class="HeroTypeSelectionBtn" id="HeroTypeSelectionBtnOld" onmouseover="DOTAShowTextTooltip(#select_old_heroes_tooltip); AddStyleToEachChild(fontcolorwhite1)" onmouseout='DOTAHideTextTooltip();RemoveStyleFromEachChild(fontcolorwhite1)' onactivate="SelectOldHeroesActivate()">				
					<Label class="HeroTypeSelectionBtnLabel" id="HeroTypeSelectionBtnLabelOld" text="#select_old_heroes"/>
				</Button>			
				<Button class="HeroTypeSelectionBtn" id="HeroTypeSelectionBtnNew" onmouseover="DOTAShowTextTooltip(#select_new_heroes_tooltip); AddStyleToEachChild(fontcolorwhite1)" onmouseout='DOTAHideTextTooltip();RemoveStyleFromEachChild(fontcolorwhite1)' onactivate="SelectNewHeroesActivate()">				
					<Label class="HeroTypeSelectionBtnLabel"  id="HeroTypeSelectionBtnLabelNew" text="#select_new_heroes" />
				</Button>
				</Panel>				
				<Panel id="HeroSelectionPanelContainer">
					<Panel id="HeroSelectionPanelOld" class="HeroSelectionPanel">
					</Panel>				
					<Panel id="HeroSelectionPanelNew" class="HeroSelectionPanel">
					</Panel>				
				</Panel>		
				<Button id="ShowGameOptionButton" class="MiddleLargeButton" onactivate="ShowGameOption();">				
					<Label id="ShowGameOptionButtonLabel" text="#show_game_options" />
				</Button>
				<Button id="HideGameOptionButton" class="MiddleLargeButton" onactivate="HideGameOption(true);">				
					<Label id="HideGameOptionButtonLabel" text="#hide_game_options" />
				</Button>			
				<Button id="JoinUsButton" class="MiddleLargeButton" onactivate="HeroDescription(&quot;JoinUs&quot;, true);">				
					<Label id="JoinUsButtonLabel" text="#join_us_title" />
				</Button>	
			</Panel>
			<Panel id="HeroDescriptionPopPanelContainer">
				<Panel id="HeroDescriptionPopPanelJoinUs" class = "HeroDescriptionPopPanelTop"> 
					<Label id="HeroNameJoinUs" class="HeroName" text="#join_us_title"/>
					<Label id="HeroBioJoinUs" class="HeroBio" text="#join_us"/>
					<Button id="DiscordChannelButton" onactivate="DOTADisplayURL('https://discord.gg/h847NwE');">				
						<Label id="DiscordChannelLabel" text="#join_discord" />
					</Button>
				</Panel>			
			</Panel>		
			<Panel id="ChatHideButtonContainer">
				<Button id="ChatHideButtonHide" class="ChatHideButton" onactivate="HideChatTeamActivate()">
					<Label id="ChatHideButtonLabelHide" class="ChatHideButtonLabel" text="#hide_chat_team" />
				</Button>
				<Button id="ChatHideButtonShow" class="ChatHideButton" onactivate="ShowChatTeamActivate()">
					<Label id="ChatHideButtonLabelShow" class="ChatHideButtonLabel" text="#show_chat_team" />
				</Button>
			</Panel>
		</Panel>
	</Panel>
</root>
